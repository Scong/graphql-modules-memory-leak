{
  "compilerOptions": {
    "lib": ["es2021", "DOM"],
    "allowJs": true,
    "diagnostics": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": false,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "outDir": "dist",
    "preserveSymlinks": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es2021"
  },
  "include": ["src/**/*"]
}
